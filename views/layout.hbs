        crossorigin="anonymous"></script>
<script>

    $(function(){
        $('[data-toggle="tooltip"]').tooltip();
        var hash = window.location.pathname;
        if(hash == '/') {
            header.classList.remove('no-inicio');
        } else {
            if(!header.classList.contains('no-inicio')) { header.classList.add('no-inicio'); }
        }

        $('nav a').removeClass('active');

        var currentSection = document.querySelector('section').id;
        if(currentSection === 'inicio') { currentSection = '/'; }
        var linkActivo = $('a[data-target="'+ currentSection + '"]');
        linkActivo.tooltip('show');
        linkActivo.addClass('active');
    });

    var header = document.querySelector('.header-info');

    $('nav a').on('click', function() {
        var target = this.dataset.target;
        setTimeout(function () {
            window.location.href = target;
        }, 0);
    });

</script>
</body>
