<section id="portafolio" class="page loading js">
    <h3>Conoce nuestro trabajo</h3>
    <div class="row">
        <div class="col-xs-12 col-md-3 categorias">
            <button data-filter="*" class="button is-active">Ver todo</button>
            <button data-filter=".branding" class="button">Branding</button>
            <button data-filter=".web" class="button">Desarrollo Web</button>
            <button data-filter=".editorial" class="button">Editorial</button>
            <button data-filter=".encuadernacion" class="button">Encuadernación</button>
            <button data-filter=".ilustracion" class="button">Ilustración</button>
            <button data-filter=".multimedia" class="button">Multimedia</button>
        </div>

        <div class="content content--center col-xs-12 col-md-9">
            <div id="grid" class="grid">
                <div class="grid__sizer"></div>
                <div class="grid__item ilustracion">
                    <a class="grid__link" href="#"><img class="grid__img" src="/img/ilustracion1.jpg" alt="imagen de un pajaro" /></a>
                </div>
                <div class="grid__item ilustracion">
                    <a class="grid__link" href="#"><img class="grid__img" src="/img/ilustracion2.jpg" alt="cabeza de perro" /></a>
                </div>
                <div class="grid__item multimedia">
                    <a  class="grid__link" href="#"><img class="grid__img" src="/img/multimedia1.jpg" alt="botella de vino y copa" /></a>
                </div>
                <div class="grid__item multimedia">
                    <a class="grid__link" href="#"><img class="grid__img" src="/img/multimedia2.png" alt="logo omg 3d" /></a>
                </div> 
                <div class="grid__item web">
                    <a class="grid__link" href="#"><img class="grid__img" src="/img/web1.jpg" alt="computador con web" /></a>
                </div>
                <div class="grid__item editorial">
                    <a class="grid__link" href="#">
                    <img class="grid__img" src="/img/editorial1.jpg" alt="portada libro de barrios" /></a>
                </div>
                 <div class="grid__item editorial">
                    <a class="grid__link" href="#">
                    <img class="grid__img" src="/img/editorial2.jpg" alt="portada libro de barrios" /></a>
                </div>
                  <div class="grid__item editorial">
                    <a class="grid__link" href="#">
                    <img class="grid__img" src="/img/editorial3.jpg" alt="interior libro de barrios" /></a>
                </div>
                <div class="grid__item editorial">
                    <a class="grid__link" href="#">
                    <img class="grid__img" src="/img/editorial4.jpg" alt="interior libro de barrios" /></a>
                </div>
                <div class="grid__item encuadernacion">
                    <a class="grid__link" href="#">
                    <img class="grid__img" src="/img/encuadernacion1.jpg" alt="encuadernacion belga" /></a>
                </div>
                <div class="grid__item encuadernacion">
                    <a class="grid__link" href="#">
                    <img class="grid__img" src="/img/encuadernacion2.jpg" alt="encuadernacion puntada larga" /></a>
                </div>
                <div class="grid__item branding">
                    <a class="grid__link" href="#">
                    <img class="grid__img" src="/img/branding1.png" alt="logo ente" /></a>
                </div>
            </div>
        </div>
    </div>
    <script src="/js/imagesloaded.pkgd.min.js"></script>
    <script src="/js/masonry.pkgd.min.js"></script>
    <script src="/js/isotope.pkgd.min.js"></script>
    <script src="/js/anime.min.js"></script>
    <script src="/js/grid.js"></script>
    <script>
        var grid = document.querySelector('.grid');

        var iso = new Isotope( '.grid', {
            itemSelector: '.grid__item',
            layoutMode: 'masonry'
        });

        var filtersElem = document.querySelector('.categorias');
        filtersElem.addEventListener( 'click', function( event ) {
            if ( !matchesSelector( event.target, 'button' ) ) {
                return;
            }
            var filterValue = event.target.getAttribute('data-filter');
            iso.arrange({ filter: filterValue });
        });

        var categorias = Array.from(document.querySelectorAll('.categorias'));
        categorias.forEach(function (cat) {
            cat.addEventListener( 'click', function( event ) {
                // only work with buttons
                if ( !matchesSelector( event.target, 'button' ) ) {
                    return;
                }
                cat.querySelector('.is-active').classList.remove('is-active');
                event.target.classList.add('is-active');
            });
        });
    </script>
</section>